DEF CHESS_TEST( )
	DECL POS board[2, 64]
	DECL INT i
	
	PTP HOME Vel=100% DEFAULT
	
	INIT_BOARD(board[,], 30, 6, 90)
	
	FOR i = 1 TO 64 STEP 1
		MOVE(board[2, i], board[1, i])
		MOVE(board[1, i], board[2, i])
		MOVE(board[1, i], board[1, i])
		MOVE(board[2, i], board[2, i])
		
		MOVE(board[2, i], point_base)
	ENDFOR
	
	FOR i = 1 TO 64 STEP 1
		MOVE(board[2, i], board[1, i])
		MOVE(board[1, i], board[2, i])
		MOVE(board[1, i], board[1, i])
		MOVE(board[2, i], board[2, i])
		
		MOVE(board[2, i], point_chess_box)
	ENDFOR
	
	FOR i = 1 TO 64 STEP 1
		MOVE(board[2, i], board[1, i])
		MOVE(board[1, i], board[2, i])
		MOVE(board[1, i], board[1, i])
		MOVE(board[2, i], board[2, i])
		
		MOVE(point_clock_high, point_clock_low);
		MOVE(point_clock_low, point_clock_high);
	ENDFOR
END

DEF INIT_BOARD(board[,] : OUT, w : IN, h1 : IN, h2 : IN)
	DECL POS board[,]
	DECL INT w, h1, h2
	DECL INT x, y
	
	FOR y = 0 TO 7 STEP 1
		FOR x = 1 TO 8 STEP 1
			board[1, y * 8 + x] = {X (w * x - w / 2), Y (w * y + w / 2), Z h1, A 0, B 0, C 0}
			board[2, y * 8 + x] = {X (w * x - w / 2), Y (w * y + w / 2), Z h2, A 0, B 0, C 0}
		ENDFOR
	ENDFOR	
END

DEF MOVE(pt1 : IN, pt2 : IN)
	DECL POS pt1, pt2
	
	LIN pt1
	WAIT SEC 1.2
	LIN pt2
	WAIT SEC 1.2
END
